<section class='login-page'>
  <div class='form-heading uk-margin'>
    <legend class='uk-legend uk-margin-top'>Login</legend>
  </div>
  <div class='form-section'>
    <form class='login-form uk-form-stacked'>
      <div class='uk-margin'>
        <label
          class='uk-form-label'
          for='form-stacked-text username-login'
        >Username</label>
        <input type='text' class='entry-field uk-input' id='username-login' />
      </div>
      <div class='uk-margin'>
        <label
          class='uk-form-label'
          for='form-stacked-text password-login'
        >Password</label>
        <input
          type='password'
          class='entry-field uk-input'
          id='password-login'
        />
      </div>
      <div>
        <button
          type='submit'
          class='uk-button uk-button-default login-signup-btn'
        >Log In!</button>
        <a class='uk-button uk-button-default' href='/signup'>Or Sign Up</a>
      </div>
    </form>
  </div>

</section>

<script src='/js/login.js'></script>